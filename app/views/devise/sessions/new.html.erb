  <div class="form-signin">
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <%= f.email_field :email, placeholder:"Email", autofocus: true, class:"form-control" %>
      <%= f.password_field :password, placeholder:"ContraseÃ±a", autocomplete: "off", class:"form-control", type:"password" %>

    <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <% end -%>

    <div class="actions">
    <%= f.submit "Log in", class:"btn btn-lg btn-primary btn-block" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
