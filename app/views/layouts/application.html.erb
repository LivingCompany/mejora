    <ul class="sidenav-menu">
      <li>
        <a href="/">
          <span class="sidenav-link-icon">
			<span class="fa fa-home" aria-hidden="true"></span>
          </span>
          <span class="sidenav-link-title">Inicio</span>
        </a>
      </li>
    </ul>
	</nav>
	<!-- Navigation bar -->
</header>

<div class="loading">
    <%= image_tag('preloader.gif', class:"loader") %>
</div>

<body style="margin-top: 55px;">
	<div class="container">
